.xy_view {
    font-size: .12rem;
    line-height: 150%;
}


/*顶部*/

.xy_header {
    width: 100%;
    height: .5rem;
    background-color: #ff841d;
    position: relative;
    .header_logo {
        width: 66%;
        position: absolute;
        top: .1rem;
        left: .14rem;
        a {
            img {
                width: 1.85rem;
                height: .25rem;
            }
        }
    }
    .header_app {
        position: absolute;
        top: 0;
        right: 0;
        a {
            padding: .06rem;
            img {
                width: .34rem;
                height: .34rem;
            }
        }
    }
}


/*搜索栏*/

.xy_searchBar {
    width: 100%;
    height: .5rem;
    border-bottom: .02rem solid #f1f1f1;
    padding: .1rem;
    font-size: .16rem;
    .search-inner {
        width: 100%;
        height: .3rem;
        position: relative;
        #searchText {
            width: 2.8rem; // width: 85%;            
            height: 100%;
            background-color: #f1f1f1;
            border-radius: .15rem;
            padding-left: .15rem;
            position: absolute;
            left: 0;
        }
        #searchBtn {
            width: .63rem;
            height: 100%;
            background-color: #ff841d;
            border-radius: .15rem;
            color: #fff;
            position: absolute;
            right: 0;
        }
    }
}


/*首页导航栏*/

.xy_navigationBar {
    padding: .1rem 0;
    border-bottom: .02rem solid #f1f1f1;
    height: 1.92rem;
    overflow: hidden;
    transition: all 1s;
    .item-List {
        li {
            width: 25%;
            float: left;
            a {
                img {
                    width: .5rem;
                    height: .5rem;
                    margin: .08rem auto;
                }
                p {
                    font-size: .14rem;
                    line-height: .14rem;
                    text-align: center;
                    margin-bottom: .1rem;
                }
            }
        }
    }
}


/*超值折扣推荐*/

.recommend_content {
    .recommend_nav {
        width: 100%;
        height: .35rem;
        background-color: #ff841d;
        padding: 0 .15rem;
        a {
            width: 100%;
            height: 100%;
            p {
                float: left;
                font-size: .18rem;
                font-weight: 700;
                color: #fff;
                line-height: .35rem;
            }
            span {
                float: right;
                width: .2rem;
                height: .2rem;
                margin-top: .07rem;
            }
        }
    }
    .discoun_list {
        li {
            width: 100%;
            height: 1.28rem;
            font-size: .14rem;
            padding: .14rem;
            position: relative;
            border-bottom: .01rem solid #e7e7e7;
            a {
                float: left;
                img {
                    display: block;
                    width: 1rem;
                    height: 1rem;
                }
            }
            a:nth-child(2) {
                width: 66%;
                padding-left: .15rem;
                span {
                    color: red;
                }
            }
            div {
                font-size: .12rem;
                color: #a6a6a6;
                float: left; // margin:40px 0  0 15px;
                position: absolute;
                left: 1.28rem;
                bottom: .14rem;
                p {
                    display: inline-block;
                }
            }
            >span {
                font-size: .12rem;
                color: #a6a6a6;
                position: absolute;
                right: .14rem;
                bottom: .14rem;
            }
        }
    }
    .more_discoun_info {
        width: 100%;
        height: .5rem;
        background-color: #f2f2f2;
        padding: .1rem .2rem;
        a {
            width: 100%;
            height: 100%;
            background-color: #fff;
            border-radius: .03rem;
            text-align: center;
            line-height: .3rem;
            box-shadow: 1px 1px 3px 1px #ccc;
        }
    }
    .xy_brand {
        width: 100%;
        height: .35rem;
        background-color: #ff841d;
        padding: 0 .15rem;
        a {
            width: 100%;
            height: 100%;
            p {
                float: left;
                font-size: .18rem;
                font-weight: 700;
                color: #fff;
                line-height: .35rem;
            }
            span {
                float: right;
                width: .2rem;
                height: .2rem;
                margin-top: .07rem;
            }
        }
    }
}


/*首页底部*/

.xy_footer {
    width: 100%;
    height: 1.22rem;
    background-color: #efefef;
    padding-top: .25rem;
    .footer_tools {
        height: .32rem;
        border-top: 1px solid #c4c4c4;
        border-bottom: 1px solid #c4c4c4;
        a {
            float: left; // width:1.12rem;
            width: 30%;
            height: 100%;
            border-right: 1px solid #c4c4c4;
            line-height: .32rem;
            text-align: center;
            font-size: .14rem;
        }
        a:last-child {
            border-right: none;
            width: 40%;
            img {
                display: inline-block;
                width: .15rem;
                height: .15rem;
                line-height:.32rem; 
            }
        }
    }
    .m_mmb {
        margin: .18rem auto;
        text-align: center;
        color: #727272;
        a {
            display: inline-block;
            span {
                color: #ff0000;
            }
        }
    }
}