@import './base.css';
@import './media.css';
//头部区域
.header {
    height: .4rem;
    background: #ff841d;
}

//内容区域
.content {
    font-size: .12rem;
    li {
        width: 50%;
        height: 2.5rem;
        padding: .2rem;
        float: left;
        border-right: 1px solid #f4f4f4;
        border-bottom: 1px solid #f4f4f4;
        .pic {}
        .name {
            // height: .24rem;
            margin-top: .2rem;
            font-weight: 600;
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
        }
        .price {
            color: #ff9547;
        }
        .info {
            font-size: .12rem;
            color: #b7b7b7;
        }
    }
}