html,
body {
  width: 100%;
  height: 100%;
}
* {
  margin: 0;
  padding: 0;
  /* 盒子模型的 怪异模式  */
  box-sizing: border-box;
}
ul {
  list-style: none;
}
a {
  text-decoration: none;
  color: inherit;
  display: block;
}
input {
  display: block;
  width: 100%;
  height: 100%;
  outline: none;
  border: none;
}
img {
  display: block;
  width: 100%;
}
.clearfix::after {
  content: "";
  display: block;
  height: 0;
  clear: both;
}
html,
body,
.mmb_view {
  height: 100%;
}
.mmb_view {
  padding-top: .44rem;
  position: relative;
  background-color: #F1F1F1;
  /* 头 */
  /* 搜索栏 */
}
.mmb_view .mmb_header {
  height: .44rem;
  width: 100%;
  position: absolute;
  top: 0;
  background-color: #ff841d;
  padding: 0 .5rem;
}
.mmb_view .mmb_header > a {
  position: absolute;
  top: 0;
  width: .5rem;
  height: 100%;
}
.mmb_view .mmb_header .header_l {
  left: 0;
  background-image: url("../images/icon_bar.png");
  background-size: 2.2rem 1.32rem;
  background-position: -0.92rem 0rem;
  background-origin: content-box;
  background-clip: content-box;
  padding: 0rem .06rem;
}
.mmb_view .mmb_header .header_r {
  right: 0;
  background-image: url("../images/header_app.png");
  background-size: .34rem .34rem;
  background-repeat: no-repeat;
  background-position: center;
}
.mmb_view .mmb_header .header_tip {
  position: relative;
  width: 100%;
  height: 100%;
  font-size: .2rem;
  line-height: .44rem;
  text-align: center;
  color: #fff;
}
.mmb_view .mmb_search {
  width: 100%;
  height: .38rem;
  background-color: #FFFFFF;
}
