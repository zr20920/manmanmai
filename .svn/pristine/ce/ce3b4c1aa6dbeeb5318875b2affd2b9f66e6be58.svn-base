/*热门品牌  */

@import './base.less';
.view {
    width: 100%;
    height: 100%;
}


/* 头部 */
header {
    width: 100%;
    height: .5rem;
    background-color: #ff841d;
    padding: 0 .14rem;
    >a {
        float: left;
        width: 50%;
        height: 100%;
        img {
            width: 100%;
            height: 50%;
            margin-top: .125rem;
        }
    }
    >a:last-child {
        float: right;
        width: .34rem;
        height: .68rem;
        img:last-child {
            margin-top: .08rem;
        }
    }
}
/* 搜索 */
.search {
    width: 100%;
    height: .52rem;
    padding: 0 .4rem 0 .1rem;
    position: relative;
    display: flex;
    align-items: center;
    border-bottom: 1px solid #ebebeb;
    >input {
        width: 100%;
        height: .3rem;
        border-radius: .2rem;
        padding-left: .22rem;
        background-color: #f1f1f1;
        font-size: .16rem;
    }
    >input:last-child {
        padding-left: 0;
        text-align: center;
        font-size: .16rem;
        color: #fff;
        line-height: .3rem;
        position: absolute;
        right: 5px;
        top: .1rem;
        background-color: #ff841d;
        width: .64rem;
        height: .3rem;
    }
}
/* 导航 */
.nav {
    height: .4rem;
    width: 100%;
    border-bottom: 1px solid #ebebeb;
    background: linear-gradient(to top,#ececec,#fff);
    ul{
        a{
            display: inline-block;
        }
        height: 100%;
        line-height: .4rem;
        padding-left: .08rem;
        li{
            height: 100%;
            float: left;
            font-size: .14rem;
            color:#5a5a5a;
        }
    }
}
/* 热门品牌header */
.hot{
    height: .4rem;
    margin: .1rem .05rem;
    border: 1px solid #cccccc;
    line-height: .4rem;
    padding-left: .12rem;
    background-color: #eeeeee;
    overflow: hidden;
    p{
        font-size: .18rem;
        color: #874604;
    }
}

.brands{
    width: 100%;
    >ul{
        width: 100%;
        position: relative;
        >li{
            width: 100%;
            height: .4rem;
            border-bottom: 1px solid #ccc;
            position: absolute;
            display: none;
            >a{
                width: 100%;
                height: 100%;
                font-size: .16rem;
                position: relative;
                line-height: .4rem;
                padding-left: .16rem; 
                >span{
                    font-size: .23rem; 
                    position: absolute;
                    right: .16rem;
                    top:.09rem;
                    color: #888;   
                }
            }
        }
    }
}