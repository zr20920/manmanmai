/* 品牌列表 */
html,
body {
  width: 100%;
  height: 100%;
}
* {
  margin: 0;
  padding: 0;
  /* 盒子模型的 怪异模式  */
  box-sizing: border-box;
}
ul {
  list-style: none;
}
a {
  text-decoration: none;
  color: inherit;
  display: block;
  -webkit-tap-highlight-color: transparent;
}
input {
  display: block;
  width: 100%;
  height: 100%;
  outline: none;
  border: none;
}
img {
  display: block;
  width: 100%;
}
.clearfix::after {
  content: "";
  display: block;
  height: 0;
  clear: both;
}
.view {
  width: 100%;
  transform-style: preserve-3d;
}
/* 头部 */
header {
  width: 100%;
  height: .5rem;
  background-color: #ff841d;
  padding: 0 .14rem;
}
header > a {
  float: left;
  width: 50%;
  height: 100%;
}
header > a img {
  width: 100%;
  height: 50%;
  margin-top: .125rem;
}
header > a:last-child {
  float: right;
  width: .34rem;
  height: .68rem;
}
header > a:last-child img:last-child {
  margin-top: .08rem;
}
/* 搜索 */
.search {
  width: 100%;
  height: .52rem;
  padding: 0 .4rem 0 .1rem;
  position: relative;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #ebebeb;
}
.search > input {
  width: 100%;
  height: .3rem;
  border-radius: .2rem;
  padding-left: .22rem;
  background-color: #f1f1f1;
  font-size: .16rem;
}
.search > input:last-child {
  padding-left: 0;
  text-align: center;
  font-size: .16rem;
  color: #fff;
  line-height: .3rem;
  position: absolute;
  right: 5px;
  top: .1rem;
  background-color: #ff841d;
  width: .64rem;
  height: .3rem;
}
/* 导航 */
.nav {
  height: .4rem;
  width: 100%;
  border-bottom: 1px solid #ebebeb;
  background: linear-gradient(to top, #ececec, #fff);
}
.nav ul {
  height: 100%;
  line-height: .4rem;
  padding-left: .08rem;
}
.nav ul a {
  display: inline-block;
}
.nav ul li {
  height: 100%;
  float: left;
  font-size: .14rem;
  color: #5a5a5a;
}
/* 销售 */
.brand_sales {
  width: 100%;
}
.brand_sales .title {
  width: 100%;
  height: .4rem;
  font-size: .16rem;
  color: #874604;
  padding-left: .08rem;
  line-height: .4rem;
  border-bottom: 1px solid #c8c8c8;
  background-color: #f3f3f3;
  position: relative;
}
.brand_sales .title span {
  position: absolute;
  top: .1rem;
  right: .5rem;
}
.brand_sales .title span:last-child {
  right: .2rem;
}
.brand_sales > ul {
  width: 100%;
  position: relative;
}
.brand_sales > ul > li {
  width: 100%;
  height: 1.2rem;
  border-bottom: 1px solid #e7e7e7;
  background-color: #f2f2f2;
  backface-visibility: hidden;
}
.brand_sales > ul > li > a {
  width: 100%;
  height: 1.2rem;
  position: relative;
}
.brand_sales > ul > li > a .pic {
  position: absolute;
  top: 0;
  left: 0;
  width: 1rem;
  height: 1rem;
  margin: .1rem;
}
.brand_sales > ul > li > a .pic img {
  width: 100%;
  height: 100%;
}
.brand_sales > ul > li > a .info {
  padding: .14rem .16rem 0 1.2rem;
  width: 100%;
  height: 1.2rem;
}
.brand_sales > ul > li > a .info .tit {
  font-size: .14rem;
  margin-bottom: .1rem;
}
.brand_sales > ul > li > a .info .pirce {
  font-size: .14rem;
  font-style: normal;
  color: #eb3900;
  margin-bottom: .1rem;
}
.brand_sales > ul > li > a .info .pirce span:last-child {
  float: right;
  width: 1rem;
  height: .2rem;
  background: url('../images/star.svg') repeat left / 0.2rem;
}
.brand_sales > ul > li > a .info .other {
  font-size: .12rem;
  color: #b2a3b8;
}
.brand_sales > ul > li:nth-child(1),
.brand_sales > ul > li:nth-child(5),
.brand_sales > ul > li:nth-child(9),
.brand_sales > ul > li:nth-child(13) {
  position: absolute;
  top: 0;
  left: 0;
}
.brand_sales > ul > li:nth-child(2),
.brand_sales > ul > li:nth-child(6),
.brand_sales > ul > li:nth-child(10),
.brand_sales > ul > li:nth-child(14) {
  position: absolute;
  top: 1.2rem;
  left: 0;
}
.brand_sales > ul > li:nth-child(3),
.brand_sales > ul > li:nth-child(7),
.brand_sales > ul > li:nth-child(11),
.brand_sales > ul > li:nth-child(15) {
  position: absolute;
  top: 2.4rem;
  left: 0;
}
.brand_sales > ul > li:nth-child(4),
.brand_sales > ul > li:nth-child(8),
.brand_sales > ul > li:nth-child(12),
.brand_sales > ul > li:nth-child(16) {
  position: absolute;
  top: 3.6rem;
  left: 0;
}
