.xy_view {
    font-size: .08rem;
    line-height: 150%;
}

/*顶部*/
.xy_header {
    width: 100%;
    height: 50px;
    background-color: #ff841d;
    position: relative;
    .header_logo {
        width: 66%;
        position: absolute;
        top: 10px;
        left: 14px;
        a {
            img {
                width: 185px;
                height: 25px;
            }
        }
    }
    .header_app {
        position: absolute;
        top: 0;
        right: 0;
        a {
            padding: 6px;
            img {
                width: 34px;
                height: 34px;
            }
        }
    }
}

/*搜索栏*/
.xy_searchBar {
    width: 100%;
    height: 50px;
    border-bottom: 2px solid #f1f1f1;
    padding: 10px;
    .search-inner {
        width: 100%;
        height: 30px;
        position: relative;
        #searchText {
            width: 2.8rem; // width: 85%;            
            height: 100%;
            background-color: #f1f1f1;
            border-radius: 15px;
            padding-left: 15px;
            // font-size: 14px;
            position: absolute;
            left: 0;
        }
        #searchBtn {
            width: .63rem;
            height: 100%;
            background-color: #ff841d;
            border-radius: 15px;
            // font-size: 16px;
            font-size: .1rem;            
            color: #fff;
            position: absolute;
            right: 0;
        }
    }
}

/*首页导航栏*/
.xy_navigationBar {}


/*超值折扣推荐*/

.recommend_content {}


/*首页底部*/

.xy_footer {
    width: 100%;
    height: 122px;
    background-color: #efefef;
    padding-top: 20px;
    .footer_tools {
        height: 32px;
        border-top: 1px solid #c4c4c4;
        border-bottom: 1px solid #c4c4c4;
        a {
            float: left; // width:1.12rem;
            width: 30%;
            height: 100%;
            border-right: 1px solid #c4c4c4;
            line-height: 32px;
            text-align: center;
        }
        a:last-child {
            border-right: none;
            width: 40%;
        }
    }
    .m_mmb {
        margin: 18px auto;
        text-align: center;
        color: #727272;
        a {
            display: inline-block;
            span {
                color: #ff0000;
            }
        }
    }
}