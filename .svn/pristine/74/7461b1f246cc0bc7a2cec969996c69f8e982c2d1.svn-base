/*  */
html,
body {
  width: 100%;
  height: 100%;
}
* {
  margin: 0;
  padding: 0;
  /* 盒子模型的 怪异模式  */
  box-sizing: border-box;
}
ul {
  list-style: none;
}
a {
  text-decoration: none;
  color: inherit;
  display: block;
}
input {
  display: block;
  width: 100%;
  height: 100%;
  outline: none;
  border: none;
}
img {
  display: block;
  width: 100%;
}
.clearfix::after {
  content: "";
  display: block;
  height: 0;
  clear: both;
}
.view {
  width: 100%;
}
/* 头部 */
header {
  width: 100%;
  height: .5rem;
  background-color: #ff841d;
  padding: 0 .14rem;
}
header > a {
  float: left;
  width: 50%;
  height: 50%;
}
header > a img {
  width: 100%;
  height: 100%;
  margin-top: .125rem;
}
header > a:last-child {
  float: right;
  width: .34rem;
  height: .34rem;
}
header > a:last-child img:last-child {
  margin-top: .08rem;
}
/* 搜索 */
.search {
  width: 100%;
  height: .52rem;
  background-color: green;
  padding: 0 .8rem 0 .1rem;
  position: relative;
  display: flex;
  align-items: center;
}
.search > input {
  width: 100%;
  height: .3rem;
  border-radius: .2rem;
  padding-left: .22rem;
  background-color: #f1f1f1;
}
.search > button {
  position: absolute;
  right: 0;
  top: .1rem;
  background-color: #ff841d;
}
