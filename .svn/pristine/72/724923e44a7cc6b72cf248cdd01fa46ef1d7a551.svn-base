@import 'base.less';
.view {
    width: 100%;
}

header {
    width: 100%;
    height: .44rem;
    background-color: #ff841d;
    padding: 0 .09rem;
    color: #fff;
    .font {
        float: left;
        width: .5rem;
        font-size: .4rem;
        margin-left: .1rem;
    }
    h1 {
        float: left;
        font-size: .2rem;
        font-weight: bold;
        text-align: center;
        line-height: .44rem;
        margin-left: .7rem;
    }
    .app {
        float: right;
        >a {
            img {
                width: .34rem;
                height: .34rem;
                margin-top: .06rem;
            }
        }
    }
}

.pic {
    width: 60%;
    margin: 0 auto;
}

.container {
    padding: .12rem;
    font-size: .12rem;
    p {
        margin-top: .1rem;
    }
    .title {
        font-weight: 600;
        font-size: .19rem;
    }
    .price {
        color: #ff841d;
        font-size: .14rem;
    }
    .tool {
        color: #ccc;
    }
    .info1 {
        color: #606060;
        font-size: .14rem;
        font-weight: bold;
    }
    .content {
        color: #acacac;
        a {
            display: block;
            width: 100%;
            background-color: #ff841d;
            height: .3rem;
            text-align: center;
            line-height: .3rem;
            font-size: .16rem;
            color: #fff;
            border-radius: 5px;
        }
    }
    .info {
        font-size: .16rem;
        color: #606060;
    }
    .comment {
        .tit {
            margin-top: .1rem;
            font-size: .14rem;
            font-weight: 500;
        }
        #ctl00_ContentBody_txt_nr {
            width: 100%;
        }
        #ctl00_ContentBody_Button1 {
            width: .8rem;
            height: .3rem;
            background: #ff841d;
            float: right;
            color: #fff;
        }
    }
    .list {
        ul {
            li {
                margin-top: .2rem;
                content: "";
                display: block;
                height: 0;
                clear: both;
                .userimg {
                    float: left;
                    img {
                        width: .5rem;
                    }
                }
                .con {
                    padding: .1rem .1rem;
                    .name {
                        margin-left: .2rem;
                        .username {
                            color: skyblue;
                        }
                        float: left;
                    }
                    .content {
                        // width: 1rem;
                        float: right;
                        img {
                            width: .3rem;
                            height: .3rem;
                        }
                    }
                }
            }
        }
    }
}

.cover {
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .5);
}

//底部
footer {
    margin-top: .5rem;
    .xy_footer {
        font-size: .16rem;
        height: 1.22rem;
        background-color: #efefef;
        padding-top: .20rem;
        .footer_tools {
            height: .32rem;
            border-top: 1px solid #c4c4c4;
            border-bottom: 1px solid #c4c4c4;
            a {
                float: left;
                width: 30%;
                height: 100%;
                border-right: 1px solid #c4c4c4;
                line-height: .32rem;
                text-align: center;
            }
            a:last-child {
                border-right: none;
                width: 40%;
                position: relative;
                img {
                    float: left;
                    width: .15rem;
                    height: .15rem;
                    position: absolute;
                    left: 0.18rem;
                    top: .08rem;
                }
            }
        }
        .m_mmb {
            margin: .18rem auto;
            text-align: center;
            color: #727272;
            font-size: .12rem;
            a {
                display: inline-block;
                span {
                    color: #ff0000;
                }
            }
        }
    }
}