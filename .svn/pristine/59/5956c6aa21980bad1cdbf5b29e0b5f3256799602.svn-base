/*  */

@import './base.less';
.view {
    width: 100%;
}
/* 头部 */
header {
    width: 100%;
    height: .5rem;
    background-color: #ff841d;
    padding: 0 .14rem;
    >a {
        float: left;
        width: 50%;
        height: 50%;
        img {
            width: 100%;
            height: 100%;
            margin-top: .125rem;
        }
    }
    >a:last-child {
        float: right;
        width: .34rem;
        height: .34rem;
        img:last-child {
            margin-top: .08rem;
        }
    }
}

/* 搜索 */

.search{
    width: 100%;
    height: .52rem;
    padding:0 .8rem 0 .1rem;
    position: relative;
    display: flex;
    align-items: center;
    >input{
        width: 100%;
        height: .3rem;
        border-radius: .2rem;
        padding-left: .22rem; 
        background-color: #f1f1f1;
    }
    >input:last-child{
        padding-left: 0;
        text-align: center;         
        font-size: .2rem;
        color:#fff;
        line-height: .3rem;
        position: absolute;
        right: 0;
        top: .1rem;
        background-color: #ff841d;
        width: .64rem;
        height: .3rem;
    }   
}