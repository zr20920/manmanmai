.xy_view {
  font-size: .08rem;
  line-height: 150%;
}
/*顶部*/
.xy_header {
  width: 100%;
  height: 50px;
  background-color: #ff841d;
  position: relative;
}
.xy_header .header_logo {
  width: 66%;
  position: absolute;
  top: 10px;
  left: 14px;
}
.xy_header .header_logo a img {
  width: 185px;
  height: 25px;
}
.xy_header .header_app {
  position: absolute;
  top: 0;
  right: 0;
}
.xy_header .header_app a {
  padding: 6px;
}
.xy_header .header_app a img {
  width: 34px;
  height: 34px;
}
/*搜索栏*/
.xy_searchBar {
  width: 100%;
  height: 50px;
  border-bottom: 2px solid #f1f1f1;
  padding: 10px;
}
.xy_searchBar .search-inner {
  width: 100%;
  height: 30px;
  position: relative;
}
.xy_searchBar .search-inner #searchText {
  width: 2.8rem;
  height: 100%;
  background-color: #f1f1f1;
  border-radius: 15px;
  padding-left: 15px;
  position: absolute;
  left: 0;
}
.xy_searchBar .search-inner #searchBtn {
  width: .63rem;
  height: 100%;
  background-color: #ff841d;
  border-radius: 15px;
  font-size: .1rem;
  color: #fff;
  position: absolute;
  right: 0;
}
/*首页导航栏*/
/*超值折扣推荐*/
/*首页底部*/
.xy_footer {
  width: 100%;
  height: 122px;
  background-color: #efefef;
  padding-top: 20px;
}
.xy_footer .footer_tools {
  height: 32px;
  border-top: 1px solid #c4c4c4;
  border-bottom: 1px solid #c4c4c4;
}
.xy_footer .footer_tools a {
  float: left;
  width: 30%;
  height: 100%;
  border-right: 1px solid #c4c4c4;
  line-height: 32px;
  text-align: center;
}
.xy_footer .footer_tools a:last-child {
  border-right: none;
  width: 40%;
}
.xy_footer .m_mmb {
  margin: 18px auto;
  text-align: center;
  color: #727272;
}
.xy_footer .m_mmb a {
  display: inline-block;
}
.xy_footer .m_mmb a span {
  color: #ff0000;
}
