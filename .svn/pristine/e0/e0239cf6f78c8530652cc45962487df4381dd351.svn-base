@import "base.less";
html,
body,
.mmb_view {
  height: 100%;
}

.mmb_view {
  padding-top: .44rem;
  position: relative;
  background-color: #F1F1F1;

  /* 头 */
  .mmb_header {
    height: .44rem;
    width: 100%;
    position: absolute;
    top: 0;
    background-color: #ff841d;
    padding: 0 .5rem;
    > a {
      position: absolute;
      top: 0;
      width: .5rem;
      height: 100%;
    }
    .header_l {
      left: 0;
      background-image: url("../images/icon_bar.png");
      background-size: 2.2rem 1.32rem;
      background-position: -.92rem 0rem;
      background-origin: content-box;
      background-clip: content-box;
      padding: 0rem .06rem;
    }
    .header_r {
      right: 0;
      background-image: url("../images/header_app.png");
      background-size: .34rem .34rem;
      background-repeat: no-repeat;
      background-position: center;
    }
    .header_tip {
      position: relative;
      width: 100%;
      height: 100%;
      font-size: .2rem;
      line-height: .44rem;
      text-align: center;
      color: #fff;
    }
  }

  /* 搜索栏 */
  .mmb_search {
    width: 100%;
    height: .38rem;
    background-color: #FFFFFF;
  }
}
