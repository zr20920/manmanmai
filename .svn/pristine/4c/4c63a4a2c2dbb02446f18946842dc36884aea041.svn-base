html,
body {
  width: 100%;
  height: 100%;
}
* {
  margin: 0;
  padding: 0;
  /* 盒子模型的 怪异模式  */
  box-sizing: border-box;
}
ul {
  list-style: none;
}
a {
  text-decoration: none;
  color: inherit;
  display: block;
  -webkit-tap-highlight-color: transparent;
}
input {
  display: block;
  width: 100%;
  height: 100%;
  outline: none;
  border: none;
}
img {
  display: block;
  width: 100%;
}
.clearfix::after {
  content: "";
  display: block;
  height: 0;
  clear: both;
}
.view {
  width: 100%;
}
header {
  width: 100%;
  height: .44rem;
  background-color: #ff841d;
  padding: 0 .09rem;
  color: #fff;
}
header .font {
  float: left;
  width: .5rem;
  font-size: .4rem;
  margin-left: .1rem;
}
header h1 {
  float: left;
  font-size: .2rem;
  font-weight: bold;
  text-align: center;
  line-height: .44rem;
  margin-left: .7rem;
}
header .app {
  float: right;
}
header .app > a img {
  width: .34rem;
  height: .34rem;
  margin-top: .06rem;
}
.pic {
  width: 60%;
  margin: 0 auto;
}
.container {
  padding: .12rem;
  font-size: .12rem;
}
.container p {
  margin-top: .1rem;
}
.container .title {
  font-weight: 600;
  font-size: .19rem;
}
.container .price {
  color: #ff841d;
  font-size: .14rem;
}
.container .tool {
  color: #ccc;
}
.container .info1 {
  color: #606060;
  font-size: .14rem;
  font-weight: bold;
}
.container .content {
  color: #acacac;
}
.container .content a {
  display: block;
  width: 100%;
  background-color: #ff841d;
  height: .3rem;
  text-align: center;
  line-height: .3rem;
  font-size: .16rem;
  color: #fff;
  border-radius: 5px;
}
.container .info {
  font-size: .16rem;
  color: #606060;
}
.container .comment .tit {
  margin-top: .1rem;
  font-size: .14rem;
  font-weight: 500;
}
.container .comment #ctl00_ContentBody_txt_nr {
  width: 100%;
}
.container .comment #ctl00_ContentBody_Button1 {
  width: .8rem;
  height: .3rem;
  background: #ff841d;
  float: right;
  color: #fff;
}
.container .list ul li {
  margin-top: .2rem;
  content: "";
  display: block;
  height: 0;
  clear: both;
}
.container .list ul li .userimg {
  float: left;
}
.container .list ul li .userimg img {
  width: .5rem;
}
.container .list ul li .con {
  padding: .1rem .1rem;
}
.container .list ul li .con .name {
  margin-left: .2rem;
  float: left;
}
.container .list ul li .con .name .username {
  color: skyblue;
}
.container .list ul li .con .content {
  float: right;
}
.container .list ul li .con .content img {
  width: .3rem;
  height: .3rem;
}
.cover {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}
footer {
  margin-top: .5rem;
}
footer .xy_footer {
  font-size: .16rem;
  height: 1.22rem;
  background-color: #efefef;
  padding-top: .20rem;
}
footer .xy_footer .footer_tools {
  height: .32rem;
  border-top: 1px solid #c4c4c4;
  border-bottom: 1px solid #c4c4c4;
}
footer .xy_footer .footer_tools a {
  float: left;
  width: 30%;
  height: 100%;
  border-right: 1px solid #c4c4c4;
  line-height: .32rem;
  text-align: center;
}
footer .xy_footer .footer_tools a:last-child {
  border-right: none;
  width: 40%;
  position: relative;
}
footer .xy_footer .footer_tools a:last-child img {
  float: left;
  width: .15rem;
  height: .15rem;
  position: absolute;
  left: 0.18rem;
  top: .08rem;
}
footer .xy_footer .m_mmb {
  margin: .18rem auto;
  text-align: center;
  color: #727272;
  font-size: .12rem;
}
footer .xy_footer .m_mmb a {
  display: inline-block;
}
footer .xy_footer .m_mmb a span {
  color: #ff0000;
}
