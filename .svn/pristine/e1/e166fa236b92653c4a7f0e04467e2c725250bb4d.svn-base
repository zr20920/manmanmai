header{
    position: relative;
    top: 0;
    width: 100%;
    height: 25vw;
    background-color: orange;
}
main{
    margin: 0vw auto;
    width: 100%;
    position: relative;
    .topBar{
        height: 12.5vw;
        padding: 0 2vw;
        background: linear-gradient(to bottom, #fff 0% , #eee 100%);
        border-top: 2px solid #aaa;
        a{
            height: 100%;
            line-height: 12.5vw;
            float: left;
            margin-right: 1vw; 
        }
        button{
            position: absolute;
            right: 2vw;
            background: linear-gradient(to top, #fff 0% , #ccc 100%);
            // box-shadow: 0 1px 1px 0 #ccc;
            border: 1px solid rgb(219, 219, 219);
            padding: 0 4vw;
            margin: 1.25vw 0;
            height: 10vw;
            border-radius: 2vw;
        }

    }
    .content{
        ul{
            li{
                height: 30vw;
                border-bottom: 1px solid rgb(219, 219, 219);
                >div{
                    width: 100%;
                    margin: 0 auto;
                }
                a{
                    width: 30%;
                    height: 100%;
                    float: left;
                    img{
                       width: 80%;
                       margin: 0 auto;
                       height: 100%;
                    }
                }
                .cont{  
                    padding: 2.5vw 0;
                    height: 100%;
                    p{
                        line-height: 6vw;
                        max-height: 12vw;
                        overflow: hidden;
                        padding: 0 2vw;
                    }
                    .price{
                        color: red;
                    }
                    span{
                        font-size: 3.75vw;
                        color: #ccc;
                        padding: 0 2vw;
                    }
                }
            }
        }
    }
    .pageBar{
        height: 12.5vw;
        padding: 2vw 30vw;
        position: relative;

        select{
            display: block;
            margin: 0 auto;
            height: 100%;
            width: 60%;
            font-size: 5vw;
        }
        button{
            position: absolute;
            top: 0;
            background: linear-gradient(to top, #eee 0% , #ccc 100%);
            box-shadow: 0 1px 1px 0 #ccc;
            border: 1px solid rgb(219, 219, 219);
            padding: 0 4vw;
            margin: 1.5vw 0;
            height: 70%;
            border-radius: 2vw;
            &:nth-of-type(1){
                left: 4vw;
            }
            &:nth-of-type(2){
                right: 4vw;
            }
        }
    }
}
footer{
    // position: fixed;
    // bottom: 0;
    width: 100%;
    height: 12.5vw;
    background-color: orange;
}